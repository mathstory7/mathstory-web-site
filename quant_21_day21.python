import FinanceDataReader as fdr
df = fdr.DataReader('005380', '2015')

df

df = df.loc[:, ['Close']].copy()
df

df['center'] = df['Close'].rolling(window=20).mean()

df


df['up_band'] = df['center'] + 2*df['Close'].rolling(window=20).std()
df

df['up_band'] = df['center'] - 2*df['Close'].rolling(window=20).std()
df

df = df.dropna()
df


